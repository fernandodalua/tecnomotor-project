<body>
<% include partials/menu %>
<div class="container-fluid bg-3 text-center">    
  <h3><%= page %></h3><br>
  <div class="row">
    <div class="col-sm-4">
      <h2>Cadastrar Montadora<h2>
      <form action="/cadastramontadora" method="POST">
          <input type="text" placeholder="Nome" name="name">
          <input type="text" placeholder="Sobrenome" name="surname">
          <button type="submit">Submit</button>
      </form>           
    </div>
    <div class="col-sm-4"> 
      <h1>Lista de Montadoras</h1>
      <ul>
        <% for(var i = 0; i < montadora.length; i++){ %>
          <li><%= montadora[i].MONID %> - <%= montadora[i].MONNOME %>
            <a href="/cliente/<%= i %>/editar">Editar</a>
            &nbsp;|&nbsp;
            <a href="/cliente/<%= i %>">Excluir</a>
          </li>
        <% } %>
      </ul>
    </div>
    <div class="col-sm-4"> 
      <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
    </div>
  </div>
</div>

</body>
<% include partials/script %>
</html>