<!DOCTYPE html>
<html lang="pt-br">
<head>
 <% include partials/head %> 
</head>
<body>
<% include partials/menu %>
<div class="container-fluid bg-3 text-center">    
  <h3><%= page %></h3><br>
  <div class="row">
    <div class="col-sm-6">
      <h2>Cadastrar Sistema<h2>
      <form action="/cadastrasistema" method="POST">
          <input type="text" placeholder="Nome" name="name">          
          <button type="submit">Cadastrar</button>
      </form> 
    </div>
    <div class="col-sm-6"> 
      <h1>Lista de Sistemas</h1>
      <ul>
        <% for(var i = 0; i < sistema.length; i++){ %>
          <li><%= sistema[i].SISID %> - <%= sistema[i].SISNOME %>
            &nbsp;|&nbsp;
            <a href="/removesistema/<%= sistema[i].SISID %>">Excluir</a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</div>
</body>
<% include partials/script %>
</html>